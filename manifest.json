{
	"name": "Bookmark bar switcher",
	"version":"0.4",
	  "manifest_version": 2,
	 "description": "Allows you to switch between multiple bookmark bars.",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"browser_action": {
		"default_title": "Bookmark bar switcher",
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": {
    "page": "background.html",
    "persistent": true
  }
,	
	"permissions": [
		"bookmarks"
	]
}
